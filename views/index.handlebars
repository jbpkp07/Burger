<div id="screenWrapper">
    <div id="sidebar">
        <span id="titleText">Burgers</span>
        <hr>
        <div id="orderText">Order Burger</div>
        <form>
            <input id="orderName" class="formInput" type="text" placeholder="Burger name (required)" spellcheck="false" required>
            {{#each ingredients}}
                <div class="ingredientWrapper">
                    <span class="ingredientName">{{name}}</span>
                    <input class="checkbox" type="checkbox" data-type="ingredient" data-id="{{id}}" data-name="{{name}}">
                </div>
            {{/each}}
            <button id="submitOrderBTN" class="btn" type="submit">submit</button>
        </form>
    </div>

    <div id="burgers">
        <div class="block">
            1
        </div>
        <div class="block-blue">
            2
        </div>
        <div class="block">
            3
        </div>
        <div class="block-blue">
            4
        </div>


        <div class="block">
            5
        </div>
        <div class="block-blue">
            6
        </div>
        <div class="block">
            7
        </div>
        <div class="block-blue">
            8
        </div>
    </div>
</div>

